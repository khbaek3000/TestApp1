        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" android:label="로그인">
        </activity>

        <activity android:name=".JoinActivity" android:label="회원가입">
        </activity>

        <activity android:name=".SearchItemActivity" android:label="사용자 입장권">
        </activity>

        <activity android:name=".BuyActivity" android:label="입장권 목록">
