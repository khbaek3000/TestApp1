<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TxV_main_maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainText"
        android:textSize="28sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/TxV_main_loginTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인을 해주세요"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/TxV_main_maintext"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/loginButton"

        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Btn_main_searchItem"
        android:text="구입한  입장권"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
            />

    <Button
        android:id="@+id/Btn_main_buyticket"
        android:text="입장권 구입하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"

        android:layout_width="160dp"
        android:layout_height="70dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/Btn_main_searchItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
            />

</android.support.constraint.ConstraintLayout>